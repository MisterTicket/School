import java.util.Random;
import java.util.Scanner;

public class opdracht5 {


    public static void main(String []args) {


        Scanner scanner = new Scanner(System.in);

        System.out.println("Geef een laag getal aan");
        double min = scanner.nextDouble();

        System.out.println("Geef een hoger getal aan");
        double max = scanner.nextDouble();

        Random minmax = new Random();
        int antwoord = minmax.nextInt(min - max)

        Random minmax2 = new Random();
        int antwoord2 = minmax2.nextInt(max) + min;


        if (min > max) {
            System.out.println("Voer een geldig getal in");
        } else {
            System.out.println("Wat is de uitkomst van " + antwoord + "+" + antwoord2 + "?");
        }

        int eindantwoord = scanner.nextDouble();

        int totaal = antwoord + antwoord2;

        if (eindantwoord == antwoord + antwoord2) {
            System.out.println("Goed gedaan!");
        } else {
            System.out.println("Het antwoord is verkeerd. De uitkomst is: " + totaal);
        }


    }

}

